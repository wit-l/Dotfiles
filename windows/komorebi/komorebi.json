{
  "$schema": "./configuration.schema.json",
  "app_specific_configuration_path": "$Env:KOMOREBI_CONFIG_HOME/applications.json",
  "window_hiding_behaviour": "Cloak",
  "cross_monitor_move_behaviour": "Insert",
  "default_container_padding": 5,
  "default_workspace_padding": 0,
  "global_work_area_offset": {
    "top": 55,
    "right": 20,
    "bottom": 55,
    "left": 10
  },
  "border_width": 8,
  "border_offset": -1,
  "ignore_rules": [
    {
      "kind": "Exe",
      "id": "uTools.exe",
      "meatching_strategy": "Equals"
    }
  ],
  "theme": {
    "palette": "Base16",
    "name": "Ashes",
    "unfocused_border": "Base03",
    "bar_accent": "Base0D"
  },
  "floating_applications": [
    {
      "kind": "Exe",
      "id": "clash-verge.exe",
      "matching_strategy": "Equals"
    },
    {
      "kind": "Title",
      "id": "Window Spy",
      "matching_strategy": "StartsWith"
    },
    {
      "kind": "Title",
      "id": "Settings - Zebar",
      "matching_strategy": "Equals"
    },
    { "kind": "Exe", "id": "explorer.exe", "matching_strategy": "Equals" },
    {
      "kind": "Exe",
      "id": "ApplicationFrameHost.exe",
      "matching_strategy": "Equals"
    }
  ],
  "manage_rules": [
    { "kind": "Title", "id": "Window Spy", "matching_strategy": "StartsWith" },
    {
      "kind": "Title",
      "id": "Settings - Zebar",
      "matching_strategy": "Equals"
    }
  ],
  "monitors": [
    {
      "workspaces": [
        {
          "name": "I",
          "layout": "BSP"
        },
        {
          "name": "II",
          "layout": "VerticalStack"
        },
        {
          "name": "III",
          "layout": "HorizontalStack"
        },
        {
          "name": "IV",
          "layout": "UltrawideVerticalStack"
        },
        {
          "name": "V",
          "layout": "Rows"
        },
        {
          "name": "VI",
          "layout": "Grid"
        },
        {
          "name": "VII",
          "layout": "RightMainVerticalStack"
        }
      ]
    },
    {
      "workspaces": [
        {
          "name": "I",
          "layout": "BSP"
        },
        {
          "name": "II",
          "layout": "VerticalStack"
        },
        {
          "name": "III",
          "layout": "HorizontalStack"
        },
        {
          "name": "IV",
          "layout": "UltrawideVerticalStack"
        },
        {
          "name": "V",
          "layout": "Rows"
        },
        {
          "name": "VI",
          "layout": "Grid"
        },
        {
          "name": "VII",
          "layout": "RightMainVerticalStack"
        }
      ]
    }
  ]
}
