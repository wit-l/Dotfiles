{
  "$schema": "./configuration.schema.json",
  "app_specific_configuration_path": "$Env:KOMOREBI_CONFIG_HOME/applications.json",
  "window_hiding_behaviour": "Cloak",
  "cross_monitor_move_behaviour": "Insert",
  "default_container_padding": 5,
  "default_workspace_padding": 0,
  "floating_window_aspect_ratio": "Widescreen",
  "float_rule_placement": "CenterAndResize",
  "floating_layer_behaviour": "Float",
  "floating_layer_placement": "CenterAndResize",
  "toggle_float_placement": "CenterAndResize",
  "global_work_area_offset": {
    "top": 0,
    "right": 20,
    "bottom": 0,
    "left": 10
  },
  "border_width": 8,
  "border_offset": -1,
  "ignore_rules": [
    {
      "kind": "Exe",
      "id": "uTools.exe",
      "meatching_strategy": "Equals"
    }
  ],
  "theme": {
    "palette": "Base16",
    "name": "CatppuccinMacchiato",
    "unfocused_border": "Base04",
    "bar_accent": "Base0D",
    "monocle_border": "Base05",
    "stack_border": "Base08",
    "floating_border": "Base0E"
  },
  "border_style": "Rounded",
  "manage_rules": [
